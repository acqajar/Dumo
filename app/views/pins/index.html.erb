<div id="pins" class="transitions-enabled">
	<h3>
	<!-- list out all PINS -->
		<% @pins.each do |pin| %>
		<div class="box panel panel-default">
				<%= link_to (image_tag pin.image.url(:medium)), pin %>
			<div class="panel-body">
				<%= link_to pin.title, pin %><br> 
				<p class="user">Submitted by: <%= pin.user.email %></p>
			</div>
		</div>
		<% end %>
	</h3>

</div>
