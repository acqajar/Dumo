

<div class="content-profile-page">
	


   <div class="profile-user-page card">
   	<!-- Profile image and Background photo -->
    <div class="img-user-profile">
        <img class="profile-bgHome" src="http://37.media.tumblr.com/88cbce9265c55a70a753beb0d6ecc2cd/tumblr_n8gxzn78qH1st5lhmo1_1280.jpg" />

        
        <%= link_to(edit_user_registration_path) do %>
        <i class="fa fa-pencil-square-o editbutton" style = "position:absolute; margin-top: -103px; margin-left: 79px;"></i>

          <% if @user.avatar != nil%>

          <%= image_tag(@user.avatar.url(:thumb), class: "avatar") %>
          


          <% else %>
          <img src = "../../assets/gravatar.jpg" class = "avatar">
          <% end %>

        <% end %>
        
     </div>





     <!-- Follower user -->
     <% unless @user = current_user %>
          <button>Follow</button>
     <% end %>




    <!-- Profile Description -->
          <br>
          <br>
          <div class="user-profile-data">
            <h1> </h1>
            <p> <%= @user.tagline%> </p>
          </div> 
          <div class="description-profile"> <%= @user.content %> </div> <br>




	<!-- User stats: followers, following, pins-->
       <ul class="data-user">
        <li><a><strong><%= @user.pins.count %></strong><span>Memes</span></a></li>
        <li><a><strong><%= @user.comments.count %></strong><span>Comments</span></a></li>
        <li><a><strong> 500 </strong><span>Following</span></a></li>
       </ul>
      </div>
    </div>


<%= link_to 'Edit', edit_user_path(@user) %> |
